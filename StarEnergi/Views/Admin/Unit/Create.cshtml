@using StarEnergi 
@model StarEnergi.Models.unit

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    function save() {
        var values =
        {
            @*"Nama": $('#nama').val(),
            "Id_foc": eval('@ViewBag.id_foc')*@

            "nama": $('#nama').val(),
            "id_foc": eval('@ViewBag.id_foc'),
            "functional_code": $('#functional_code').val(),
            "unit_description": $('#unit_description').val(),
        }

        $.post("Unit/Create", values, function (data) {
             if (data != undefined) {
                if (data["status"] == 0) {
                    var value = 'UNIT;' + data["message"];
                    $('#content').load('unit/details/' + data["message"]);
                    AppendItem($('#nama').val(), value);
                    DeselectNode();
                    SelectNode(value);
                } else if (data["status"] == 1) {
                    clearError();
                    $.each(data, function (index, value) {
                        if (index != "status") {
                            //error render
                            $('#' + index).next('div').html(value);
                        }
                    });
                } else {
                    alert("Data unit sudah terdaftar");
                }
            } else {
                alert('Gagal menambahkan data equipment');
            }
        });

    }

    function clearError() {
        var field = ["nama"];
        $.each(field, function (index, value) {
            $('#' + value).next('div').html('');
        });
    }
</script>
<div class="fieldR">* Required Field</div>
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>unit</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.nama)<a class="bintang">*</a>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nama)
            <div class="errorM"></div>
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.functional_code)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.functional_code)
            <div class="errorM"></div>
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.unit_description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.unit_description)
            <div class="errorM"></div>
        </div>
        <p>
            <input type="submit" value="Create" onclick="save()"/>
        </p>
    </fieldset>
