@model IEnumerable<StarEnergi.Models.MasterPTEntity>

@{
    ViewBag.Title = "PT";
}

<h2>@ViewBag.Title</h2>

@(Html.Telerik().Grid<StarEnergi.Models.MasterPTEntity>()
        .TableHtmlAttributes(new { style = "width:695px" })
        .Name("PT")
        .DataKeys(keys =>
        {
            keys.Add(p => p.id);
        })
        .ToolBar(commands => commands.Insert().ButtonType(GridButtonType.ImageAndText).ImageHtmlAttributes(new { style = "margin-left:0" }))
        .DataBinding(dataBinding =>
        {
            dataBinding.Ajax()
                .Select("_SelectAjaxEditing", "MasterPT")
                .Insert("_InsertAjaxEditing", "MasterPT")
                .Update("_SaveAjaxEditing", "MasterPT")
                .Delete("_DeleteAjaxEditing", "MasterPT");
        })
        .Columns(columns =>
        {
            columns.Bound(o => o.pt_description).Title("Description");
            columns.Bound(o => o.pt_value).Title("Value");
            columns.Bound(o => o.pt_score).Title("Score");
            columns.Command(commands =>
            {
                commands.Edit().ButtonType(GridButtonType.Image);
                commands.Delete().ButtonType(GridButtonType.Image);
            }).Width(80).Title("Commands");

        })
        .Pageable(p => p.PageSize(15))
        .Sortable()
        .Groupable()
        .Filterable()
        .Editable(editing => editing.Mode(GridEditMode.InLine))
        .Scrollable(c => c.Enabled(true))
        .Selectable()
) 