<script type="text/javascript">
    $(document).ready(function () {
        $("#installed_date").val('@DateTime.Now');
        $("#installed_date").prop('disabled', true);
    });
    function save() {
        var values =
        {
            @*"tag_number": $('#tag_number').val(),
            "id_equipment_part": eval('@ViewBag.id_equipment_part'),
            "description": $('#descriptions').val()*@

            "id_equipment_part": eval('@ViewBag.id_equipment_part'),
            "component_name": $('#component_name').val(),
            "tag_number": $('#tag_number').val(),
            "functional_code": $('#functional_code').val(),
            "installed_date": $('#installed_date').val(),
            "description": $('#descriptions').val(),


        }

        $.post("Component/Create", values, function (data) {
            console.log(data)
             if (data != undefined) {
                if (data["status"] == 0) {
                    var value = 'COMPONENT;' + data["message"];
                    $('#content').load('component/details/' + data["message"]);
                    //AppendItem($('#tag_number').val(), value);                    
                    AppendItem($('#component_name').val(), value);
                    DeselectNode();
                    SelectNode(value);
                } else if (data["status"] == 1) {
                    clearError();
                    $.each(data, function (index, value) {
                        if (index != "status") {
                            //error render
                            $('#' + index).next('div').html(value);
                        }
                    });
                } else {
                    alert("Data component sudah terdaftar");
                }
            } else {
                alert('Gagal menambahkan data component');
            }
        });

    }

    function clearError() {
        //var field = ["tag_number"];
        var field = ["component_name", "tag_number", "functional_code", "installed_date","description"];
        $.each(field, function (index, value) {
            $('#' + value).next('div').html('');
        });
    }
</script>
