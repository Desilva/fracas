@model StarEnergi.Models.component

@{
    ViewBag.Title = "Details";
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#detailsBOM').load('BuildOfMAterial/RenderDetailsComponent/?id=' + '@Model.id' + '&type=comp');
    })

    function edit() {
        $('#content').load('component/edit/' + '@Model.id');
    }
</script>
