
<script>
    $(document).ready(function () {

        var initiatorBox = document.getElementById("boxInitiator").getElementsByTagName("svg").item(0).getElementById("box");
        var dataInitiator = @Html.Raw(ViewBag.Initiator.ToString());
        if(dataInitiator == 1)
        {
            initiatorBox.style.fill = "cyan";
        }
        else if(dataInitiator == 2)
        {
            initiatorBox.style.fill = "lime";
        }


        var supervisorBox = document.getElementById("boxSupervisor").getElementsByTagName("svg").item(0).getElementById("box");
        var dataSupervisor = @Html.Raw(ViewBag.Supervisor.ToString());
        if(dataSupervisor == 1)
        {
            supervisorBox.style.fill = "cyan";
        }
        else if(dataSupervisor == 2)
        {
            supervisorBox.style.fill = "lime";
        }


        var superintendentBox = document.getElementById("boxSuperintendent").getElementsByTagName("svg").item(0).getElementById("box");
        var dataSuperintendent = @Html.Raw(ViewBag.Superintendent.ToString());
        if(dataSuperintendent == 1)
        {
            superintendentBox.style.fill = "cyan";
        }
        else if(dataSuperintendent== 2)
        {
            superintendentBox.style.fill = "lime";
        }
    });

</script>
