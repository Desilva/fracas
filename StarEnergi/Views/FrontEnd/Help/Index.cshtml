
<script type="text/javascript">
    function onSelectPanel(e) {
        var item = $(e.item);
        var type = (item.find('> .t-link').text()).split(" ").join("_");

        $("#BRcontent").load("Help/HelpContent?type=" + type);

    }
</script>
