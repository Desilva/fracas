                panelBarItem2.Add().Text("Injury Report");
                panelBarItem2.Add().Text("Audit");
                panelBarItem2.Add().Text("Observation Form");
            });
            panelBarItem.Add().Text("Daily Log");
            panelBarItem.Add().Text("Equipt. Report");
